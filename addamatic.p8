function _init()
	poke(0x5f2d, 1)

	buttons={}
	for i=0,39 do
		b={x=i%8+1,y=i\8+1}
		add(buttons,b)
	end
end

function _update()
	--mouse pos
	mx=stat(32)
	my=stat(33)
	
end

